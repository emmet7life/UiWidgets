<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/offBlack"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/BaseDialogFragment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/BaseDialogFragment_titleMargin"
        android:textColor="@color/white"
        android:textSize="@dimen/BaseDialogFragment_titleTextSize" />

    <View
        android:id="@+id/BaseDialogFragment_titleRule"
        android:layout_width="match_parent"
        android:layout_height="@dimen/default_ruleSize"
        android:background="@color/white" />

    <FrameLayout
        android:id="@+id/BaseDialogFragment_contentContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>